{
    "compilerOptions": {
        "target": "esnext",
        "moduleResolution": "node",
        "module": "esnext",
        "allowJs": false,
        "noEmit": true,
        "strict": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "jsx": "react-jsx",
        "baseUrl": ".",
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "paths": {
            "components/*": ["src/components/*"],
            "contexts/*": ["src/contexts/*"],
            "hooks/*": ["src/hooks/*"],
            "styles/*": ["src/styles/*"],
            "utils/*": ["src/utils/*"],
        },
    },
    "exclude": [
        "node_modules"
    ]
}